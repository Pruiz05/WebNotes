extends ../layouts/main.pug
block contenido
    div(class="container")
        div(class="row") 
            div(class="card-deck")
                for note in notes
                    div(class="card")
                        div(class="card-body")
                            div(class="card-body")
                                h4(class="card-title d-flex justify-content-between align-items-center")= note.title 
                                    - var cod = note._id
                                    a(href="/notes/edit/"+cod)
                                        span(class="fa fa-edit")                                
                                p= note.description
                                form(action="/notes/delete/"+cod+"?_method=DELETE", method="post")
                                    input(type="hidden", name="_method" value="DELETE")
                                    button(class="btn btn-danger btn-block btn-sm" type="submit") Delete
                                //--span(class="fa fa-edit")
                                    "/app/images/"+cod+"/edit"
                                //- if(typeof image.creator != "undefined")
                                    p Creado por #{image.creator.email}
                else
                    div(class="card mx-auto")
                        h4(class='mx-auto')= 'Hello ' + user.username
                        div(class="card-body")
                            p(class="lead") There are not notes yet.
                            a(href="/notes/add" class="btn btn-success btn-block") Create One
                             
                br  
        //--h5 Bienvenidos a la pagina #{user.email}